<%- include("templates/header") %>
    <% if (error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <% } else { %>
            <div class="text-center py-5">

                <h1>Admin Page</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Username</th>
                            <th scope="col">Email</th>
                            <th scope="col">Admin</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user)=> { %>
                            <tr>
                                <td>
                                    <%= user.username %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <%= user.isAdmin ? 'Yes' : 'No' %>
                                </td>
                                <td>
                                    <% if (user.isAdmin) { %>
                                        <form action="/demote/<%= user._id %>" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-danger btn-sm">Demote</button>
                                        </form>
                                        <% } else { %>
                                            <form action="/promote/<%= user._id %>" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-success btn-sm">Promote</button>
                                            </form>
                                            <% } %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>

                <div class="d-flex gaap-2 justify-content-center py-5">
                    <form action="/logout" method="POST">
                        <button class="btn btn-primary">Sign Out</button>
                    </form>
                </div>

            </div>
            <% } %>
                <%- include("templates/footer") %>